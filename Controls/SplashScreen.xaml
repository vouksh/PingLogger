<Window x:Class="PingLogger.GUI.Controls.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingLogger.GUI.Controls"
        mc:Ignorable="d"
        Title="PingLogger Splash Screen" Height="450" Width="450"
		Style="{DynamicResource CustomDialogStyle}"
		WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="400" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label x:Name="mainLabel" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Loading and checking for updates..." FontSize="24" FontWeight="Bold" />
		<ProgressBar x:Name="dlProgress" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
	</Grid>
</Window>
