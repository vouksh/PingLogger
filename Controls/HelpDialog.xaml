<Window x:Class="PingLogger.GUI.Controls.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingLogger.GUI.Controls"
        mc:Ignorable="d"
        Title="Help" Height="635" Width="405" Loaded="Window_Loaded" 
		ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen" Style="{DynamicResource CustomDialogStyle}"
		DataContext="{Binding RelativeSource={RelativeSource Self}}"
		WindowStyle="SingleBorderWindow">
	<Grid>
		<TextBlock x:Name="helpText" HorizontalAlignment="Left" Margin="5,5,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" Height="587"/>

	</Grid>
</Window>
