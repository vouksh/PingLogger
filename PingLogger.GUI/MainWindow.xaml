<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingLogger.GUI"
        xmlns:Controls="clr-namespace:PingLogger.GUI.Controls" x:Class="PingLogger.GUI.MainWindow"
        mc:Ignorable="d"
        Title="Ping Logger 2.0 beta" Height="478" Width="859" Loaded="Window_Loaded">
	<Grid>
		<TabControl x:Name="tabControl" ItemsSource="{Binding}" SelectionChanged="tabControl_SelectionChanged" Grid.ColumnSpan="3">
			<TabControl.Resources>
				<DataTemplate x:Key="TabHeader" DataType="TabItem">
					<DockPanel>
						<Button x:Name="tabDelBtn" DockPanel.Dock="Right" Margin="5,0,0,0" Background="Transparent" BorderBrush="Transparent" Padding="0" Click="tabDelBtn_Click" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Uid}">
							<Image Source="/delete.png" Height="12" Width="12"></Image>
						</Button>
						<TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Header}" />
					</DockPanel>
				</DataTemplate>
			</TabControl.Resources>
		</TabControl>
	</Grid>
</Window>
