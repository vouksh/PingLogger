<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PingLogger.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="805" d:DesignHeight="480"
        x:Class="PingLogger.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
		Width="805" Height="480"
        CanResize="false" TransparencyBackgroundFallback="DarkGray" TransparencyLevelHint="AcrylicBlur">
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	<Grid>
	    <TabControl Padding="0" Items="{Binding TabItems}" FontSize="12" Classes="MainTab" />
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12" Content="Options" FontSize="10" Command="{Binding OpenOptionsCommand}" />
	</Grid>
</Window>
